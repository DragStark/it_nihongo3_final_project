<!DOCTYPE html>
<html>
  <head>
    <title>ItNihongo3Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <!-- bootstrap cdn -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
    
    <!-- fontawesome -->
    <script src="https://kit.fontawesome.com/f65cdfd97c.js" crossorigin="anonymous"></script>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class='bg-warning author'>
    <div class='container'>
      <div class="bg-info rounded">
      <nav class="navbar navbar-expand-lg bg-body-tertiary mt-3">
        <div class="container-fluid">
         <%= link_to home_index_path do %>
             <%= image_tag "logo-l.png", height: 100 %>
         <% end %>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <% if author_signed_in? %>
                  <li class="nav-item">
                      <button class="btn btn-danger text-light">
                          <%= link_to 'My Profile', authors_show_path, class: 'text-light font-weight-bold text-decoration-none' %>
                        </button>
                    
                  </li>
                  <li class="nav-item">
                      <button class="btn btn-danger text-light ml-2">
                          <%= link_to 'My Posts', posts_path, class: 'text-light font-weight-bold text-decoration-none' %>
                        </button>
                    
                  </li>
              <% else %>
                <li class="nav-item">
                  <button class="btn btn-danger text-light">
                      <%= link_to 'Sign Up', new_author_registration_path, class: 'text-light font-weight-bold text-decoration-none' %>
                  </button>
                </li>
                <li class="nav-item">
                     <button class="btn btn-danger ml-2">
                        <%=  link_to 'Log In', new_author_session_path, class: 'text-light font-weight-bold text-decoration-none' %>
                     </button>
                </li>
              <% end %>
            </ul>
          </div>
          <% if author_signed_in? %>
            <b class="text-light">Hello, <%= current_author.name %></b>
            <button class="btn btn-danger ml-2">
                <%= link_to 'Log Out', destroy_author_session_path, method: :delete, class: 'text-light font-weight-bold text-decoration-none' %>
            </button>
          <% end %>
        </div>
      </nav>
      </div>
      <hr>
      
      <%= yield %>
      
    </div>
  </body>
</html>
